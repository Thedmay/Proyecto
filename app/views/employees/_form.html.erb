<%= form_for(@employee) do |f| %>
  <% if @employee.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@employee.errors.count, "error") %> prohibited this employee from being saved:</h2>

      <ul>
      <% @employee.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="caja">
    <div class="field">
      <%= f.label :nombre %><br>
      <%= f.text_field :nombre , class: 'form-control', :onkeypress => "return sololetras(event)" %>
    </div>
    <div class="field">
      <%= f.label :rut %><br>
      <%= f.text_field :rut , class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email , class: 'form-control'%>
    </div>
    <div class="field">
      <%= f.label :sueldo %><br>
      <%= f.number_field :sueldo , class: 'form-control', :onkeypress => "return solonumeros(event)"%>
    </div>
    <div class="field">
      <%= f.label :fecha_ingreso %><br>
      <input id="employee_fecha_ingreso" type='date' min='2015-11-01' max='2016-12-12' class="form-control" name="employee[fecha_ingreso]"></input>
    </div>
    <div class="actions">
      <%= f.submit class: "btn btn-primary margenes", value:texto%>
      <% if texto=="Editar" %>
        <%= link_to 'Mostrar', @employee , class: "btn btn-info margenes" %> 
      <% end %>
      <%= link_to 'Volver', employees_path , class: "btn btn-default margenes" %>
    </div>
  </div>
<% end %>
