<h1>Listando Empleados</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Rut</th>
      <th>Clave</th>
      <th>Email</th>
      <th>Sueldo</th>
      <th>Fecha ingreso</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @employees.each do |employee| %>
      <tr>
        <td><%= employee.nombre %></td>
        <td><%= employee.rut %></td>
        <td><%= employee.clave %></td>
        <td><%= employee.email %></td>
        <td><%= employee.sueldo %></td>
        <td><%= employee.fecha_ingreso %></td>
        <td><%= link_to 'Mostrar', employee, class: "" %></td>
        <td><%= link_to 'Editar', edit_employee_path(employee) %></td>
        <td><%= link_to 'Eliminar', employee, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

