<% editar ||= false %>
<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nombre %><br>
    <%= f.text_field :nombre , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :codigo %><br>
    <%= f.text_field :codigo , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :unidades %><br>
    <%= f.text_field :unidades , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :medida %><br>
    <%= f.text_field :medida , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :fecha_produce %><br>
    <%= f.date_select :fecha_produce , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :category_id%>
    <%= collection_select( :product, :category_id, Category.all, :id, :nombre, {}, { :multiple => false})%>
  </div>

  <% if editar %>
    <%= render '/tableMatters1', materiales: materiales, materiales2: materiales2, cantidades_matters: cantidad_matters ,editar: editar %>
  <% else %>
    <%= render '/tableMatters1', materiales: materiales, editar: editar %>
  <% end %>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>