<div class="row margen-negative">
    <div class="col-md-3 center-block no-float">
        <h2><i class="fa fa-star"></i>Registrarse</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name),html: {role: "form"}) do |f| %>
        <%= devise_error_messages! %>

            <div class="form-group">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, class:"form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password , value: "ContraseÃ±a"%>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation, value: "Confirme ContraseÃ±a" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control" %>
            </div>

            <div class="text-center">
                <%= f.submit "Registrar", class:"btn btn-info" , value: "Registrarse"%>
            </div>
        <% end %>
        <div class="text-center">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
