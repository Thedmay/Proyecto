<div class="row margen-negative">
    <div class="col-md-3 center-block no-float">
        <h2><span class="glyphicon glyphicon-user"></span>Iniciar sesion</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: {role: "form"}) do |f| %>
            <div class="form-group">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class: "form-control" %>
            </div>

            <div class="form-group">
            <%= f.label :password , value: "ContraseÃ±a"%><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control"%>
            </div>

            <% if devise_mapping.rememberable? -%>
                <div class="field">
                <%= f.check_box :remember_me%>
                <%= f.label :remember_me , value: "Recuerdame"%>
                </div>
            <% end -%>

            <div class="text-center">
                <%= f.submit "Ingresar", class: "btn btn-info"%>
            </div>
        <% end %>
        <div class="text-center">
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>
