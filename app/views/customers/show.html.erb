<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @customer.nombre %>
</p>

<p>
  <strong>Rut:</strong>
  <%= @customer.rut %>
</p>

<p>
  <strong>Telefono:</strong>
  <%= @customer.telefono %>
</p>

<p>
  <strong>Email:</strong>
  <%= @customer.email %>
</p>

<p>
  <strong>Direccion:</strong>
  <%= @customer.direccion %>
</p>

<label>Pedidos</label>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Fecha</th>
      <th>Detalle</th>
      <th>Cantidad</th>
      <th>Medida</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.orders.each do |order| %>
      <tr>
        <td><%= order.numero %></td>
        <td><%= order.fecha %></td>
        <td><%= order.detalle %></td>
        <td><%= order.cantidad %></td>
        <td><%= order.medida %></td>
        <td><%= link_to 'Show', order %></td>
        <td><%= link_to 'Edit', edit_order_path(order) %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<label>Facturas</label>

<table>
  <thead>
    <tr>
      <th>Numero</th>
      <th>Fecha</th>
      <th>Razon social</th>
      <th>Giro comercial</th>
      <th>Monto neto</th>
      <th>Iva</th>
      <th>Total</th>
      <th>Customer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customer.bills.each do |bill| %>
      <tr>
        <td><%= bill.numero %></td>
        <td><%= bill.fecha %></td>
        <td><%= bill.razon_social %></td>
        <td><%= bill.giro_comercial %></td>
        <td><%= bill.monto_neto %></td>
        <td><%= bill.iva %></td>
        <td><%= bill.total %></td>
        <td><%= bill.customer.nombre %></td>
        <td><%= link_to 'Show', bill %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_customer_path(@customer) %> |
<%= link_to 'Back', customers_path %>
