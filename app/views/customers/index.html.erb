<% if can? :crud, :Customer %>
  <p id="notice"><%= notice %></p>

  <h1>Listando Clientes</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Rut</th>
        <th>Telefono</th>
        <th>Email</th>
        <th>Direccion</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.nombre %></td>
          <td><%= customer.rut %></td>
          <td><%= customer.telefono %></td>
          <td><%= customer.email %></td>
          <td><%= customer.direccion %></td>
          <td><%= link_to 'Mostrar', customer %></td>
          <td><%= link_to 'Editar', edit_customer_path(customer) %></td>
          <% if can? :destroy, :Customer %>
            <td><%= link_to 'Destrior', customer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nuevo Cliente', new_customer_path , class: "btn btn-default margenes"%>
<% else %>
  <%= render '/noPermission' %>
<% end %>