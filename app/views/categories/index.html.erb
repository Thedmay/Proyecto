<% if can? :crud, :Category %>
  <p id="notice"><%= notice %></p>

  <h1>Listando Categorias</h1>

  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.nombre %></td>
          <td><%= link_to 'Mostrar', category %></td>
          <td><%= link_to 'Editar', edit_category_path(category) %></td>
          <% if can? :destroy, :Category %>
            <td><%= link_to 'Destruir', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Nueva Categoria', new_category_path , class: "btn btn-primary margenes"%>
<% else %>
  <%= render '/noPermission' %>
<% end %>