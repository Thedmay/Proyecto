<% editar ||= false %>
<%= form_for(@fecha) do |f| %>
  <% if @fecha.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@fecha.errors.count, "error") %> prohibited this fecha from being saved:</h2>

      <ul>
      <% @fecha.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field caja">
    <%= f.label :Fecha %><br>
    <input id="fecha_fecha" type='date' min='2016-09-28' max='2016-09-28' class="form-control" name="fecha[fecha]"></input>
  </div>
  
  <label>Empleados</label>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Rut</th>
        <th>Email</th>
        <th>Sueldo</th>
        <th>Fecha ingreso</th>
      </tr>
    </thead>

    <tbody>
      <% if empleados != nil %>
        <% empleados.each do |employee| %>
          <tr>
            <td><%= check_box_tag "employees[]", employee.id, checked: true  %><%= employee.nombre %></td>
            <td><%= employee.rut %></td>
            <td><%= employee.email %></td>
            <td><%= employee.sueldo %></td>
            <td><%= employee.fecha_ingreso %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <% if editar %>
    <label>Empleados ausentes </label>
    <table>
      <thead>
        <tr>
          <th>Nombre</th>
          <th>Rut</th>
          <th>Email</th>
          <th>Sueldo</th>
          <th>Fecha ingreso</th>
        </tr>
      </thead>

      <tbody>
        <% if empleados2 != nil %>
          <% empleados2.each do |employee| %>
            <tr>
              <td><%= check_box_tag "employees2[]", employee.id %><%= employee.nombre %></td>
              <td><%= employee.rut %></td>
              <td><%= employee.email %></td>
              <td><%= employee.sueldo %></td>
              <td><%= employee.fecha_ingreso %></td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
    </table>
  <% end %>
  <div class="actions">
    <%= f.submit class: "btn btn-primary margenes" ,value: texto%>
    <% if texto=="Editar" %>
      <%= link_to 'Mostrar', @fecha, class: "btn btn-info margenes" %> 
    <% end %>
    <%= link_to 'Volver', fechas_path, class: "btn btn-default margenes"%>
  </div>
<% end %>
