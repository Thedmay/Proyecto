<p id="notice"><%= notice %></p>

<h1>Listando Fechas</h1>

<table>
  <thead>
    <tr>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fechas.each do |fecha| %>
      <tr>
        <td><%= fecha.fecha %></td>
        <td><%= link_to 'Mostar', fecha %></td>
        <td><%= link_to 'Editar', edit_fecha_path(fecha) %></td>
        <td><%= link_to 'Destruir', fecha, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Fecha', new_fecha_path , class: "btn btn-primary"%>
