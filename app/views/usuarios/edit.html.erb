<h2>Editar usuario</h2>

	<%= form_for(@usuario) do |f| %>
    <% if @usuario.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

        <ul>
          <% @usuario.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

  <div class="caja">
	  <div class="field">
	    <%= f.label :nombre %><br />
	    <%= f.text_field :nombre, autofocus: true , class: "form-control"%>
	  </div>
	  <div class="field">
	    <%= f.label :email %><br />
	    <%= f.email_field :email, autofocus: true , class: "form-control"%>
	  </div>

	  <div class="form-group">
        <%= f.label :permission_level, value: "Grado" %>
        <select name="usuario[permission_level]" id="usuario_permission_level" class="form-control">
		  <option value="0">Trabajador</option>
		  <option value="1">Administrador</option>
		</select>
      </div>

	  <div class="field">
	    <%= f.label :password , value: "Contrase単a"%> <i>(dejar en blanco si no desea cambiarla)</i><br />
	    <%= f.password_field :password, autocomplete: "off" , class: "form-control"%>
	  </div>

	  <div class="field">
	    <%= f.label :password_confirmation, value: "Confirme contrase単a" %><br />
	    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control"%>
	  </div>

	  <div class="field">
	    <%= f.label :current_password, value: "Contrase単a actual" %> <i>(necesitamos su contrase単a actual para confirmar los cambios)</i><br />
	    <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %>
	  </div>

	  <div class="actions">
	    <%= f.submit "Actualizar" , class: "btn btn-primary margenes"%>
	    <%= link_to "Volver", :back, class: "btn btn-default margenes" %>
	  </div>
  </div>
<% end %>
