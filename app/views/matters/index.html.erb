<p id="notice"><%= notice %></p>

<h1>Listing Matters</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Medida</th>
      <th>Saldo</th>
      <th>Fecha ingreso</th>
      <th>Fecha utiliza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.nombre %></td>
        <td><%= matter.medida %></td>
        <td><%= matter.saldo %></td>
        <td><%= matter.fecha_ingreso %></td>
        <td><%= matter.fecha_utiliza %></td>
        <td><%= link_to 'Show', matter %></td>
        <td><%= link_to 'Edit', edit_matter_path(matter) %></td>
        <td><%= link_to 'Destroy', matter, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

