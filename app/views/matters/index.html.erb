<p id="notice"><%= notice %></p>

<h1>Listando Materias</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Medida</th>
      <th>Saldo</th>
      <th>Fecha ingreso</th>
      <th>Fecha utiliza</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @matters.each do |matter| %>
      <tr>
        <td><%= matter.nombre %></td>
        <td><%= matter.medida %></td>
        <td><%= matter.saldo %></td>
        <td><%= matter.fecha_ingreso %></td>
        <td><%= matter.fecha_utiliza %></td>
        <td><%= link_to 'Mostrar', matter %></td>
        <td><%= link_to 'Editar', edit_matter_path(matter) %></td>
        <td><%= link_to 'Eliminar', matter, method: :delete, data: { confirm: 'Â¿Estas seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Materia', new_matter_path, class: "btn btn-primary margenes"%>
