<p id="notice"><%= notice %></p>

<p>
  <strong>Nombre:</strong>
  <%= @matter.nombre %>
</p>

<p>
  <strong>Medida:</strong>
  <%= @matter.medida %>
</p>

<p>
  <strong>Saldo:</strong>
  <%= @matter.saldo %>
</p>

<p>
  <strong>Fecha ingreso:</strong>
  <%= @matter.fecha_ingreso %>
</p>

<p>
  <strong>Fecha utiliza:</strong>
  <%= @matter.fecha_utiliza %>
</p>

<label>Productos</label>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Codigo</th>
      <th>Unidades</th>
      <th>Medida</th>
      <th>Fecha produce</th>
      <th>Category</th>
    </tr>
  </thead>

  <tbody>
    <% @matter.products.each do |product| %>
      <tr>
        <td><%= product.nombre %></td>
        <td><%= product.codigo %></td>
        <td><%= product.unidades %></td>
        <td><%= product.medida %></td>
        <td><%= product.fecha_produce %></td>
        <td><%= product.category.nombre %></td>
      </tr>
    <% end %>
  </tbody>
</table>
