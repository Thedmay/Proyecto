<label>Materias</label>
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Cantidad</th>
      <th>Medida</th>
      <th>Saldo</th>
    </tr>
  </thead>

  <tbody>
    <% i = 0 %>
    <% materiales.each do |matter| %>
      <tr>
        <td><%= matter.nombre %></td>
        <td><%= @cantidadesMatters.at(i) %></td>
        <td><%= matter.medida %></td>
        <td><%= matter.saldo %></td>
      </tr>
      <% i+=1 %>
    <% end %>
  </tbody>
</table>