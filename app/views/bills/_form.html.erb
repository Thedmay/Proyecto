<% editar ||= false %>
<% customer ||= nil %>
<% cantidades_products ||= nil %>

<%= form_for(@bill) do |f| %>
  <% if @bill.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bill.errors.count, "error") %> prohibited this bill from being saved:</h2>

      <ul>
      <% @bill.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :numero %><br>
    <%= f.number_field :numero , class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.label :fecha %><br>
    <%= f.date_select :fecha , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :razon_social %><br>
    <%= f.text_field :razon_social , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :giro_comercial %><br>
    <%= f.text_field :giro_comercial , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :monto_neto %><br>
    <%= f.text_field :monto_neto , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :iva %><br>
    <%= f.text_field :iva , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.text_field :total , class: 'form-control'%>
  </div>
  <div class="field">
    <%= f.label :customer_id%>
    <% if customer == nil %>
      <%= collection_select( :bill, :customer_id, Customer.all, :id, :nombre, {}, { :multiple => false})%>
    <% else %>
      <%= collection_select( :bill, :customer_id, Customer.listaFalsa(customer), :id, :nombre, {}, { :multiple => false})%>
    <% end %>
  </div>
  
  <% if editar %>
    <%= render '/tableProducts1', productos: @bill.products, productos2: Product.diferencia(@bill.products), cantidades_products: BillProduct.cantidades(@bill.id, 1) ,editar: editar %>
  <% else %>
    <%= render '/tableProducts1', productos: productos ,editar: editar, cantidades_products:cantidades_products %>
  <% end %>
  

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
