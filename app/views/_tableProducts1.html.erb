<% editar ||= false %>
<% cantidades_products ||= nil %>

<div class="field">
  <label>Productos</label>
  <table>
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Codigo</th>
        <th>Unidades</th>
        <th>Medida</th>
        <th>Categoria</th>
        <th>Cantidad</th>
      </tr>
    </thead>
    <% i=0 %>
    <tbody>
      <% productos.each do |product| %>
        <tr>
          <td><%= check_box_tag "products[]", product.id, :checked => editar %><%=product.nombre%></td>
          <td><%= product.codigo %></td>
          <td><%= product.unidades %></td>
          <td><%= product.medida %></td>
          <td><%= product.category.nombre %></td>
          <% if editar or cantidades_products != nil%>
            <td><%= number_field_tag "cantidadesProducts[]", cantidades_products.at(i), class: 'form-control', :onkeypress => "return solonumeros(event)" %></td>
          <% else %>
            <td><%= number_field_tag "cantidadesProducts[]", '0' , class: 'form-control', :onkeypress => "return solonumeros(event)"%></td>
          <% end %>
        </tr>
        <% i+=1 %>
      <% end %>
    </tbody>
  </table>
</div>

<br>
